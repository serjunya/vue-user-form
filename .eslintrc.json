{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "plugin:vue/vue3-recommended",
        "eslint:recommended",
		"plugin:@typescript-eslint/recommended",
		"plugin:prettier/recommended",
		"prettier"
    ],
    "parser": "vue-eslint-parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "parser": "@typescript-eslint/parser",
        "sourceType": "module",
        "extraFileExtensions": [ ".vue" ]
    },
	"plugins": [
		"@typescript-eslint",
		"prettier",
		"vue"
	],
    "rules": {
        "quotes": [
			"error",
			"double"
		],
        "@typescript-eslint/no-explicit-any": "off",
        "prettier/prettier": [
			"warn",
			{
				"semi": true,
                "tabWidth": 4,
				"endOfLine": "auto"
			}
        ]
    }
}
